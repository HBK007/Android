<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rel_layout_play"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f74fe6"
    tools:context="com.example.nguyenduchai.freakingmath.PlayActivity">

    <TextView
        android:id="@+id/lbl_formular"
        style="@style/BigTextSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="a + b"
        android:layout_below="@+id/lbl_score"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="157dp" />

    <TextView
        android:id="@+id/lbl_result"
        style="@style/BigTextSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="= c"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="62dp"
        android:layout_below="@+id/lbl_formular"
        android:layout_toRightOf="@+id/btn_correct"
        android:layout_toEndOf="@+id/btn_correct" />

    <ImageView
        android:id="@+id/btn_correct"
        android:layout_width="@dimen/buttonImage"
        android:layout_height="@dimen/buttonImage"
        android:layout_marginBottom="48dp"
        app:srcCompat="@drawable/ic_check"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp" />

    <ImageView
        android:id="@+id/btn_wrong"
        android:layout_width="@dimen/buttonImage"
        android:layout_height="@dimen/buttonImage"
        app:srcCompat="@drawable/ic_wrong"
        android:layout_alignTop="@+id/btn_correct"
        android:layout_alignRight="@+id/lbl_score"
        android:layout_alignEnd="@+id/lbl_score" />

    <TextView
        android:id="@+id/lbl_score"
        style="@style/SmallTextSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="25dp"
        android:text="0" />

</RelativeLayout>
