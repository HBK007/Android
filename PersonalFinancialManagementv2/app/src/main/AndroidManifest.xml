<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nguyenduchai.cse.com.personalfinancialmanagementv2">

    <!-- set can read and write on sd card-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="nguyenduchai.cse.com.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="nguyenduchai.cse.com.activity.ReportActivity"
            android:label="@string/title_activity_report"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="nguyenduchai.cse.com.activity.AddDetailItemActivity"
            android:label="@string/title_activity_add_detail_item"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="nguyenduchai.cse.com.activity.EditDetailItemActivity" />
        <activity
            android:name="nguyenduchai.cse.com.activity.AddItemActivity"
            android:theme="@style/Theme.AppCompat.Light.Dialog" />
        <activity
            android:name="nguyenduchai.cse.com.activity.EditItemActivity"
            android:theme="@style/Theme.AppCompat.Light.Dialog" />
        <activity
            android:name="nguyenduchai.cse.com.activity.GraphViewActivity"
            android:label="@string/title_activity_graph_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="nguyenduchai.cse.com.activity.ReportDetailDateActivity" />
        <activity android:name="nguyenduchai.cse.com.activity.ReportDetailMonthActivity" />
        <activity android:name="nguyenduchai.cse.com.activity.ReportDetailYearActivity"></activity>
    </application>

</manifest>
